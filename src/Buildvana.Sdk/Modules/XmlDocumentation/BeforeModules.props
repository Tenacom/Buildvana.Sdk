<Project>

  <!-- We don't have control over the GenerateDocumentationFile property:
       it is set in Microsoft.NET.Sdk.BeforeCommon.targets, before we can determine the project type.
       We will use the XmlDocs property instead, but first set GenerateDocumentationFile to true,
       so the .NET SDK can set DocumentationFile and we can use it later. -->
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

</Project>